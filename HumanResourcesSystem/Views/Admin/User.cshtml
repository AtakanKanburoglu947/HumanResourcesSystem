@model HumanResourcesSystem.Models.UserPageModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-4">
    <div class="card text-dark bg-white border shadow-sm">

        <div class="card-body">
            <form asp-action="Change" asp-controller="Admin" method="post" id="userForm">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <p class="form-control-plaintext">ID: @Model.Id</p>
                </div>

                <div class="mb-3">
                    <label for="Name" class="form-label">Adı:</label>
                    <input type="text" asp-for="FirstName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="Name" class="form-label">Soyadı:</label>
                    <input type="text" asp-for="LastName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="Name" class="form-label">Doğum Tarihi:</label>
                    <input type="date" asp-for="BirthDate" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="Name" class="form-label">İşe Alınma Tarihi:</label>
                    <input type="date" asp-for="HireDate" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="ManagerId" class="form-label">Yönetici:</label>
                    <select asp-for="ManagerId" asp-items="Model.ManagerList" class="form-select">
                        <option value="">Yönetici Seçiniz</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="CompanyId" class="form-label">Şirket:</label>
                    <select asp-for="CompanyId" asp-items="Model.CompanyList" class="form-select">
                        <option value="">Şirket Seçiniz</option>  
                    </select>
                </div>
                <div class="mb-3">
                    <label for="DepartmentId" class="form-label">Departman:</label>
                    <select asp-for="DepartmentId" asp-items="Model.DepartmentList" class="form-select">
                        <option value="">Departman Seçiniz</option>
                    </select>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        Değiştir
                    </button>
                </div>

       
             </form>
        </div>
    </div>
</div>