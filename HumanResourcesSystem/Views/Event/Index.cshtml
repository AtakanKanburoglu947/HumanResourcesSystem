@model List<HumanResourcesSystem.Models.CelendarEvent>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>İş Takvimi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>

    <div class="container mt-4">
        <h2 class="text-center">📅 İş Takvimi Yönetimi</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <!-- 🟢 Yeni Etkinlik Ekleme Butonu -->
        <button class="btn btn-success mb-3 rounded-pill" data-bs-toggle="modal" data-bs-target="#addEventModal">Yeni Etkinlik Ekle</button>

        <!-- 🟣 Etkinlik Grid -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var eventItem in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@eventItem.Title</h5>
                            <p class="card-text">
                                <strong>Tarih:</strong> @eventItem.Start.ToString("yyyy-MM-dd")<br>
                                <strong>Başlangıç:</strong> @eventItem.Start.ToString("HH:mm")<br>
                                <strong>Bitiş:</strong> @eventItem.End.ToString("HH:mm")
                            </p>
                        </div>
                        <div class="card-footer text-center">
                            <!-- Silme Butonu (Kırmızı) -->
                            <button class="btn btn-danger mb-3 rounded-pill deleteBtn" data-id="@eventItem.Id">Sil</button>
                            <!-- Düzenleme Butonu (Yuvarlak köşe) -->
                            <button class="btn btn-warning mb-3 rounded-pill editBtn"
                                    data-id="@eventItem.Id"
                                    data-title="@eventItem.Title"
                                    data-start="@eventItem.Start.ToString("yyyy-MM-ddTHH:mm")"
                                    data-end="@eventItem.End.ToString("yyyy-MM-ddTHH:mm")">
                                Düzenle
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- 🟢 Yeni Etkinlik Ekleme Modalı -->
    <div class="modal fade" id="addEventModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Yeni Etkinlik Ekle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form action="/Event/Add" method="post">
                        <div class="mb-3">
                            <label>Başlık</label>
                            <input type="text" name="Title" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label>Başlangıç</label>
                            <input type="datetime-local" name="Start" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label>Bitiş</label>
                            <input type="datetime-local" name="End" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-success rounded-pill">Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- 🟡 Etkinlik Düzenleme Modalı -->
    <div class="modal fade" id="editEventModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Etkinliği Düzenle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form action="/Event/Update" method="post">
                        <input type="hidden" name="Id" id="editEventId">

                        <div class="mb-3">
                            <label>Başlık</label>
                            <input type="text" name="Title" id="editEventTitle" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label>Başlangıç</label>
                            <input type="datetime-local" name="Start" id="editEventStart" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label>Bitiş</label>
                            <input type="datetime-local" name="End" id="editEventEnd" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-warning rounded-pill">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        // 🟡 Düzenleme Modalını Açma
        $(document).ready(function () {
            $(".editBtn").click(function () {
                var id = $(this).data("id");
                var title = $(this).data("title");
                var start = $(this).data("start");
                var end = $(this).data("end");

                // Modal içindeki inputlara değerleri set et
                $("#editEventId").val(id);
                $("#editEventTitle").val(title);
                $("#editEventStart").val(start);
                $("#editEventEnd").val(end);

                // Modalı aç
                $("#editEventModal").modal("show");
            });
        });

        $(document).ready(function () {
            $(".deleteBtn").click(function () {
                var id = $(this).data("id");
                if (confirm("Bu etkinliği silmek istediğinizden emin misiniz?")) {
                    $.ajax({
                        url: "/Event/Delete/",
                        type: "POST",
                        data: { id: id },
                        success: function (data) {
                            if (data.success) {
                                alert("Etkinlik başarıyla silindi.");
                                location.reload();  // Sayfayı yenilemeden güncelle
                            }
                        }
                    });
                }
            });
        });
    </script>

</body>
</html>
