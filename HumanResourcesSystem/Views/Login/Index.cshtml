@{
    Layout = null;
}
@model HumanResourcesSystemCore.AuthModels.Login
<div class="container">

    <main role="main" class="pb-3">

        <form asp-action="Index" method="post">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" , type="password" />
            </div>
            <br />
            <button type="submit" class="btn btn-secondary" style="width:100%">Giriş Yap</button>
        </form>
        @if (ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState["login"].Errors)
                {
                    <div class="alert">@error.ErrorMessage</div>
                }
            </div>
        }

    </main>

</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>