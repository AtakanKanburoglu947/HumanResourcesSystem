@{
}
@model List<HumanResourcesSystemCore.Models.PerformanceReview>
<div class="container mt-4">
    <h2 class="text-center mb-4">Performance Reviews</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Review Date</th>
                    <th scope="col">Score</th>
                    <th scope="col">Reviewer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var review in Model)
                {
                    <tr>
                        <td>@review.ReviewDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <span class="badge @(review.Score >= 80 ? "bg-success" : review.Score >= 50 ? "bg-warning" : "bg-danger")">
                                @review.Score
                            </span>
                        </td>
                        <td>@review.Reviewer?.BirthDate</td>
                    </tr>
                    <tr>
                        <td colspan="3">@review.Feedback</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            No performance reviews available.
        </div>
    }
</div>