@{
    Layout = null;
}
@model HumanResourcesSystemCore.AuthModels.Register
<div class="container">
    <main role="main" class="pb-3">
        <form asp-action="Index" method="post">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate"></label>
                <input asp-for="BirthDate" class="form-control", type="datetime-local" />
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" , type="password" />
            </div>
            <br />
            <button type="submit" class="btn btn-primary" style="width:100%">Kayıt ol</button>
        </form>
        @if (ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState["register"].Errors)
                {
                    <p class="alert">@error.ErrorMessage</p>
                }
            </div>
        }
    </main>

</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

